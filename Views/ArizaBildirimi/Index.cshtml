        @*<div class="card-footer">*@
            <div class="" style=" width: auto;">
                <label for="exampleFormControlSelect1" style="margin-left:3px">Cihaz Ara</label>
                <div class="row gutters-xs" style="margin-left:1px">
                    <span class="col-auto">
                        <input type="text" class="form-control" placeholder="Envanter Numarası veya Seri Numarası" style=" width: 270px;">
                    </span>
                    <span class="col-auto">
                        <button class="btn btn-secondary" type="button"><i class="fe fe-search"></i></button>
                    </span><br /><br />
                </div>
            </div>
        @*</div>*@
        <br /><br />
        
            <form name="urunKaydi" action="/Main/Index/" onsubmit="return validateForm()" method="post" class="login100-form validate-form">
                <div class="row row-cards row-deck">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1"><font color="red">* </font>Cihaz Türü</label>
                            <select class="form-control" id="cihazTuru" name="cihazTuru">
                                <option value="" hidden>Notebook, Tablet, Telefon, Lcd vb.</option>
                                <option value="1">Notebook</option>
                                <option value="2">Tablet</option>
                                <option value="3">Telefon</option>
                                <option value="4">LCD Ekran</option>
                                <option value="5">Mouse</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1"><font color="red">* </font>Cihaz Modeli</label>
                            <select class="form-control" id="cihazModeli" name="cihazModeli">
                                <option value="" hidden>Cihaz türüne ait model seçin.</option>
                                <option value="1">Notebook</option>
                                <option value="2">Tablet</option>
                                <option value="3">Telefon</option>
                                <option value="4">LCD Ekran</option>
                                <option value="5">Mouse</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1"><font color="red">* </font>Garanti Başlangıcı</label>
                            <input type='text' name="garantiBas" class="form-control" id='datepicker' placeholder="Ürünün garanti başlangıç tarihi">
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label for="exampleFormControlInput1"><font color="red">* </font>Envanter Numarası</label>
                            <input type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürüne bir envanter numarası atayın.">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1"><font color="red">* </font>Seri Numarası</label>
                            <input type="text" name="seriNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürüne ait seri numarasını girin.">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1"><font color="red">* </font>Cihaz Durumu</label>
                            <select class="form-control required" id="cihazDurumu" name="cihazDurumu">
                                <option value="" hidden>Cihaz durumunu seçin.</option>
                                <option value="1">Kullanılabilir</option>
                                <option value="2">Arızalı</option>
                                <option value="3">Hurda</option>
                                <option value="4">Serviste</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="form-group">
                            <label for="exampleFormControlInput1"><font color="red">* </font>Sıfır/İkinci El</label>
                            <select class="form-control required" id="sifirIkinciEl" name="sifirIkinciEl">
                                <option value="" hidden>Seçim Yapın.</option>
                                <option value="1">Sıfır</option>
                                <option value="2">İkinci El</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1"><font color="green">* </font>Açıklama</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Ürüne ait detaylar."></textarea>
                        </div>
                    </div>
                </div><br /><br />
                <div class="card-footer text-right">
                    <div class="text-right">
                        <button type="reset" @*onclick="location.href='/Main/Index'"*@ class="btn btn-danger btn-lg" style=" margin-right: 30px;">İptal</button>
                        <button type="submit" id="btnSubmitbtnSubmit" class="btn btn-primary ml-auto btn-lg">Kaydet</button>
                    </div>
                </div>
            </form>
