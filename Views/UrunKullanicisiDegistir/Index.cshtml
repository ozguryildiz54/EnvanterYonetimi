        <div class="page-header" style=" padding-bottom: 10px; margin: 0px 0 20px;">
            <h1 class="page-title" style=" margin-top: -15px;">
                Ürün Kullanıcı Değiştirme
            </h1>
        </div>

        @*<div class="card-footer">*@
        <div class="" style=" width: auto;">
            <label for="exampleFormControlSelect1" style="margin-left:3px">Cihaz Ara</label>
            <div class="row gutters-xs" style="margin-left:1px">
                <span class="col-auto">
                    <input type="text" id="ara" class="form-control" placeholder="Envanter Numarası veya Seri Numarası" style=" width: 270px;">
                </span>
                <span class="col-auto">
                    <button class="btn btn-secondary" type="button"><i class="fe fe-search"></i></button>
                    <button class="btn btn-secondary" type="button" onclick="arama()">
                        <span class="glyphicon glyphicon-copy"></span> Kopyala
                    </button>
                </span><br /><br />
            </div>
        </div>
        @*</div>*@
        <br /><br />

        <form name="urunKaydi" action="/Main/Index/" onsubmit="return validateForm()" method="post" class="login100-form validate-form">
            <div class="row row-cards row-deck">
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Kullanıcı Bilgisi</label>
                        <input type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Kullanıcı Adı Soyadı">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Cihaz Türü</label>
                        <input disabled=" disabled " type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürün cihaz türü.">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Cihaz Modeli</label>
                        <input disabled=" disabled " type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürün cihaz modeli.">
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Envanter Numarası</label>
                        <input disabled="disabled" type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürüne bir envanter numarası atayın.">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Seri Numarası</label>
                        <input disabled=" disabled " type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürün seri numarası">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Cihaz Durumu</label>
                        <input disabled=" disabled " type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Cihazın durumu">

                    </div>
                </div>
                <div class="col-md-6 col-lg-4">

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Sıfır/İkinci El</label>
                        <input disabled=" disabled " type="text" name="envNo" class="form-control" id="exampleFormControlInput1" placeholder="Ürün sıfır/ikinci el bilgisi.">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1"><font color="green">* </font>Açıklama</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Ürüne ait detaylar."></textarea>
                    </div>
                </div>
            </div><br /><br />
            <div class="card-footer text-right">
                <div class="text-right">
                    <button type="reset" @*onclick="location.href='/Main/Index'"*@ class="btn btn-danger btn-lg" style=" margin-right: 30px;">İptal</button>
                    <button type="submit" id="btnSubmitbtnSubmit" class="btn btn-primary ml-auto btn-lg">Ürünü Kullanıcıya Ata</button>
                </div>
            </div>
        </form>
